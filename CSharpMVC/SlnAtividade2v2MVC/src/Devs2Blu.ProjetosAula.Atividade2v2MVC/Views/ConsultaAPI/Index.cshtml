@model Character

<div class="row">
	@foreach(var c in Model.results)
	{
		<div class="card col-md-2 m-3 col-10 bg-dark">
			<div class="card-header">
				<img class="img-fluid" src="@c.image" alt="@c.name">
			</div>
			<div class="card-body">
				<div class="text-white">@c.name</div>
				<article>
					<div class="list-group">
						<div class="list-group-item bg-success">Status: @c.status</div>
						<div class="list-group-item bg-success">Specie: @c.species</div>
					</div>
				</article>
			</div>
		</div>
	}
</div>