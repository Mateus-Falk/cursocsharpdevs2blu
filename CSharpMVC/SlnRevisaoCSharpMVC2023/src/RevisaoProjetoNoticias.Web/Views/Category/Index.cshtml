@model IEnumerable<RevisaoProjetoNoticias.Domain.DTO.CategoryDTO>

<p>
    <a  class="btn btn-primary" asp-action="Create">Add Category</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.name)
            </th>
          
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.id">Edit</a> 
                <a class="btn btn-danger" href="#" onclick="deleteCategory(@item.id)">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>


@section Scripts {
    <script>
        const deleteCategory = (idParam) => {
            msgModalMessage(`Do you really want to delete the category ${idParam}?`, () => {
                $.ajax({
                    url:`@Url.Action("Delete")`,
                    method: 'POST',
                    data: {
                        id: idParam
                    },
                    success: (resp) => {
                        var msg = `O Registro ${idParam} foi excluído.`;
                        if(!(resp.code == '200')){
                            msg = resp.status;
                        }
                        liveToastMessage(msg,'News');
                        setTimeout(() => {window.location.reload();},4000);
                    }
                });
                closeMsgModalMessage(); 
            });
        }
    </script>
}