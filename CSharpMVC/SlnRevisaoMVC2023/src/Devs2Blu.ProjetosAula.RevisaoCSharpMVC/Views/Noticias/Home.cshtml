@model IEnumerable<Devs2Blu.ProjetosAula.RevisaoCSharpMVC.Models.Entities.Noticia>

<div class="container fluid py-5">
    <h1 class="display-5 fw-bold">Formula News</h1>
    <p class="col-md-8 fs-4">
        Bem vindos ao Formula News, o site mais completo sobre Fórmula 1.
        Trazemos noticias sobre as equipes, resultados, janela de transferencia e muito mais.
    </p>
    <p class="col-md-8 fs-4">
        Fique atento que nossas noticias são mais rapidas que os carros!!!
    </p>
    <div id="carouselHome" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/img/renault.jpg" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="~/img/Verstappen-Hamilton.jpg" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="~/img/alpha-romeo.jpg" class="d-block w-100" alt="...">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselHome" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselHome" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categoria)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Titulo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descricao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Categoria.Nome)
                </td>
            </tr>
        }
    </tbody>
</table>